<ScrollView
        android:id="@+id/container"
        xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:onClick="showinterface"
        android:src="@drawable/smarttv"
        android:tag="Television" />

    <ImageButton
        android:id="@+id/ImageButton01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageButton1"
        android:onClick="showinterface"
        android:src="@drawable/lights"
        android:tag="Lightnew" />

    <ImageButton
        android:id="@+id/ImageButton02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ImageButton01"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ImageButton01"
        android:onClick="showinterface"
        android:src="@drawable/thermostat"
        android:tag="Thermostat" />

    <ImageButton
        android:id="@+id/ImageButton03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton1"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/ImageButton01"
        android:onClick="showinterface"
        android:src="@drawable/musicplayer"
        android:tag="Musicplayer" />

    <ImageButton
        android:id="@+id/ImageButton04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImageButton01"
        android:layout_alignTop="@+id/ImageButton03"
        android:onClick="showinterface"
        android:src="@drawable/electriccar"
        android:tag="Electriccar" />

    <ImageButton
        android:id="@+id/ImageButton05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImageButton02"
        android:layout_alignTop="@+id/ImageButton04"
        android:onClick="showinterface"
        android:src="@drawable/coffeemachine"
        android:tag="Coffeemachine" />

    <ImageButton
        android:id="@+id/ImageButton06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImageButton03"
        android:layout_below="@+id/ImageButton03"
        android:layout_marginTop="10dp"
        android:onClick="showinterface"
        android:src="@drawable/security"
        android:tag="Security" />

    <ImageButton
        android:id="@+id/ImageButton07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ImageButton06"
        android:layout_centerHorizontal="true"
        android:onClick="showinterface"
        android:src="@drawable/meters"
        android:tag="Smartmeter" />

    <ImageButton
        android:id="@+id/ImageButton08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImageButton05"
        android:layout_alignTop="@+id/ImageButton07"
        android:onClick="showinterface"
        android:src="@drawable/camera"
        android:tag="Camera" />

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImageButton06"
        android:layout_alignRight="@+id/ImageButton08"
        android:layout_below="@+id/ImageButton06"
        android:layout_marginTop="10dp"
        android:tag="Listdevices"
        android:text="Other Devices" />

    <ImageButton
        android:id="@+id/ImageButton09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/ImageButton01"
        android:onClick="showinterface"
        android:src="@drawable/calendar"
        android:tag="Calendar" />

    <ImageButton
        android:id="@+id/ImageButton10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImageButton07"
        android:layout_alignTop="@+id/ImageButton09"
        android:onClick="showinterface"
        android:src="@drawable/settings"
        android:tag="Settings" />

    <ImageButton
        android:id="@+id/ImageButton11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button1"
        android:layout_alignTop="@+id/ImageButton10"
        android:onClick="showinterface"
        android:src="@drawable/information"
        android:tag="Information" />
</RelativeLayout>    
    
    </ScrollView>


